set daemon 120
set logfile syslog facility log_daemon

set eventqueue
basedir /var/log/monit
slots 100

set mailserver smtp.gmail.com port 587 username "no-reply@host.ru" password "SECRET" using tlsv1

set mail-format { from: no-reply@openteam.ru }
set alert developers@openteam.ru
set alert developers@openteam.ru { timeout }

check system <%= @node[:fqdn] %>
  if loadavg (1min) > 6 then alert
  if loadavg (5min) > 3 then alert
  if memory usage > 75% then alert
  if cpu usage (user) > 70% then alert
  if cpu usage (system) > 30% then alert
  if cpu usage (wait) > 20% then alert

